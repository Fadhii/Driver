<html>
<head>
<script language=javascript>
function triangle()
{
a=parseInt(prompt("Enter side1 of a trigle"))
b=parseInt(prompt("Enter side2 of a trigle"))
c=parseInt(prompt("Enter side3 of a trigle"))
if(a+b>c && b+c>a && a+c>b)
{
alert("Can form a triangle")
s=(a+b+c)/2
area=Math.sqrt( s* (s-a)*(s-b)*(s-c))
document.f1.res.value=area
}
else
{
alert("Can not form a triangle")
}
}
</script>
</head>
<body>
<form name=f1>
Enter three sides of a triangle
<input type="button" value="Display" onclick="triangle()"> <br>
Result: <output name = "res"></output>
</form>
</body>
</html>